<!DOCTYPE html>
<html>
<head>
  <title>BasicTemplate</title>
  <%= render 'layouts/stylesheets' %>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |key,message| %>
<%= content_tag(:div, message, :class => "flash #{key}") %>
<% end %>

<%= yield %>

</body>
</html>
